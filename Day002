#WRITING_THE_FILE:

text = "Sample Text"
saveFile = open('exampleFile.txt','w')                             #AnyFile.txt
saveFile.write(text)
saveFile.close()

>>>Sample Text



#APPENDING_FILES:

append = 'Information'
appendFile = open('exampleFile.txt','a')                           #AnyFile.txt
appendFile.write(append)
appendFile.close()


#READ_FILES:

readMe = open('exampleFile.txt','r').read()                        #AnyFile.txt
print(readMe)
	
